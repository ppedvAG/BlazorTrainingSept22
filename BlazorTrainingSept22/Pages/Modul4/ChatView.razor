@page "/chat"
@inject ChatVM vm
<h3>ChatView</h3>
<div class="container">
    <div class="row">
        <div class="col">
            <div class="input-group mb-3">

                <input type="text" class="form-control" placeholder="Nachricht" @bind="Eingabe">
                <button class="btn btn-outline-secondary" type="button" @onclick="send">send</button>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <ul class="list-group list-group-flush">
                @foreach (var item in vm.NachrichtenListe)
                {
                    <li class="list-group-item">
                        @item.Text
                    </li>
                }
            </ul>

        </div>
    </div>
</div>
@code {
    string Eingabe;
    void send()
    {
        vm.Add(Eingabe);
        Eingabe = "";
    }
    protected override void OnInitialized() => vm.OnAdd += ()=>InvokeAsync(StateHasChanged);



}
