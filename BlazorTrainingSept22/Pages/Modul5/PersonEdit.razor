@page "/person/{id:int?}"
<h3>PersonEdit</h3>
<EditForm OnSubmit="save"  EditContext="_edx">
    <DataAnnotationsValidator></DataAnnotationsValidator>
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <InputText @bind-Value="_person.Name" class="form-control"></InputText>
            <ValidationMessage For="()=>_person.Name"></ValidationMessage>
        </div>
    </div>
     <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Gross</label>
        <div class="col-sm-10">
            <InputNumber @bind-Value="_person.Gross" class="form-control"></InputNumber>
            <ValidationMessage For="()=>_person.Gross"></ValidationMessage>
        </div>
    </div>
     <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Gebdat</label>
        <div class="col-sm-10">
            <InputDate @bind-Value="_person.GebDat" class="form-control"></InputDate>
            <ValidationMessage For="()=>_person.GebDat"></ValidationMessage>
        </div>
    </div>
    <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i>save</button>
    <ValidationSummary></ValidationSummary>
</EditForm>

@code {
        [Parameter]
        public int id { get; set; }
        Person _person = new Person();
        EditContext _edx;
        void save()
        {

        }
    protected override void OnInitialized()
    {
        _edx=new EditContext(_person);
        _edx.SetFieldCssClassProvider(new BootstrapFieldCSSClassFixprovider());
    }
}
